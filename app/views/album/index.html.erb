<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center"><strong><%= t('help.album_group.group_' + params[:group]) %> - <%= t('views.album') %></strong></h2>
      <hr>
      <% @album.each do |album| %>
        <div class='col-xs-6 col-md-3' align="center">
          <% @photo.each do |photo| %>
            <a href="<%= album_show_path(params[:group], album.id) %>" title="<%= album.title %>">
              <%= image_tag(photo.file_url(:thumb), alt: album.title, class: 'img-thumbnail') %>
            </a>
          <% end %>
          <p align='center'><%= album.title %></p>
        </div>
      <% end %>
      <%= paginate @album %>
    </div>
  </div>
</div>